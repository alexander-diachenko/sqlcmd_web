<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="ua.com.juja.positiv.sqlcmd"/>
    <bean id="service" class="ua.com.juja.positiv.sqlcmd.service.ServiceImpl">
        <property name="commands">
            <list>
                <value>connect</value>
                <value>create-table</value>
                <value>tables</value>
                <value>update-record</value>
                <value>clear-table</value>
                <value>create-record</value>
                <value>delete-record</value>
                <value>delete-table</value>
                <value>create-database</value>
                <value>delete-database</value>
            </list>
        </property>
        <lookup-method name="getManager" bean="postgreDatabaseManager"/>
    </bean>
</beans>